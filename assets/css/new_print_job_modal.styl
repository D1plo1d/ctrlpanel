#new-print-job-modal
  display flex
  flex-flow column

  &.hide
    left: -10000000px

  .modal-body, .modal-footer
    display: block

  .modal-body
    // external col flex
    flex 1 1 auto
    max-height initial
    height auto
    // internal row flex
    display flex
    flex-flow row
    box-direction: reverse

  .canvas-container
    flex 1 1 auto

  .options
    z-index: 10
    width: 40%
    border-left 1px solid #CCC
    padding-left 20px

